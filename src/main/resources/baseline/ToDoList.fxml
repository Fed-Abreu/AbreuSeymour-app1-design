<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="601.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="baseline.ToDoListController">
   <children>
      <Pane layoutX="14.0" layoutY="8.0" prefHeight="86.0" prefWidth="338.0">
         <children>
            <Label layoutX="24.0" layoutY="14.0" prefHeight="59.0" prefWidth="194.0" text="My ToDo List">
               <font>
                  <Font size="29.0" />
               </font>
            </Label>
            <MenuBar layoutY="2.0">
              <menus>
                <Menu mnemonicParsing="false" text="File">
                  <items>
                    <MenuItem mnemonicParsing="false" text="Save" />
                        <MenuItem mnemonicParsing="false" text="Load" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
         </children>
      </Pane>
      <HBox alignment="CENTER" layoutX="33.0" layoutY="350.0" prefHeight="39.0" prefWidth="547.0" spacing="50.0">
         <children>
            <Button fx:id="AddListButton" mnemonicParsing="false" onAction="#addButtonClicked" text="Add List" />
            <Button fx:id="EditListButton" mnemonicParsing="false" onAction="#editButtonClicked" text="Edit List" />
            <Button fx:id="RemoveListButton" mnemonicParsing="false" onAction="#removeButtonClicked" text="Remove List" />
         </children>
      </HBox>
      <TextField fx:id="ListText" layoutX="37.0" layoutY="312.0" prefHeight="25.0" prefWidth="538.0" promptText="Insert List here" />
      <ListView fx:id="todoList" layoutX="33.0" layoutY="67.0" prefHeight="240.0" prefWidth="538.0" />
   </children>
</AnchorPane>
